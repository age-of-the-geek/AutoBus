<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    android:background="@drawable/front"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Theme.AppCompat.DayNight.NoActionBar">

    <LinearLayout android:gravity="bottom"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/img"
            android:layout_width="190.0dip"
            android:layout_height="190.0dip"
            android:layout_marginBottom="0.0dip"
            android:src="@drawable/logo" />
        <TextView android:textSize="22.0sp"
            android:layout_gravity="bottom|center"
            android:id="@+id/textwelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60.0dip"
            android:text="@string/welcome_text" />
    </LinearLayout>
</LinearLayout>