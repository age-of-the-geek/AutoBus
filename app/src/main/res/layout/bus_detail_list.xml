<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <include
        android:id="@+id/toolbar_passenger"
        layout="@layout/toolbar_default"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:id="@+id/layout">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:padding="4dp"
            android:src="@drawable/boy"/>


        <TextView
            android:padding="5dp"
            android:layout_marginLeft="120dp"
            android:id="@+id/bus_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daewo"
            android:textSize="20dp"
            android:textColor="#000000" />




        <TextView
            android:padding="5dp"
            android:layout_marginLeft="120dp"
            android:id="@+id/bus_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bus_company"
            android:layout_marginTop="5dp"
            android:text="GJN-1234"
            android:textSize="20dp"
            android:textColor="#000000" />


        <TextView
            android:padding="5dp"
            android:layout_marginLeft="120dp"
            android:id="@+id/total_seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bus_number"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="70"
            />

        <TextView
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/available_seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/total_seats"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="50"
            android:textSize="20dp"
            android:textColor="#000000" />
        <TextView
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/leaving_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/available_seats"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="50"
            android:textSize="20dp"
            android:textColor="#000000" />
        <TextView
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/reaching_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/leaving_time"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="50"
            android:textSize="20dp"
            android:textColor="#000000" />
        <TextView
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/driver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reaching_time"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="50"
            android:textSize="20dp"
            android:textColor="#000000" />
        <TextView
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/tk_checker_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/driver_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="50"
            android:textSize="20dp"
            android:textColor="#000000" />
        <TextView
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/break_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tk_checker_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="50"
            android:textSize="20dp"
            android:textColor="#000000" />
        <TextView
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/break_time"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="50"
            android:textSize="20dp"
            android:textColor="#000000" />
        <TextView
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/route_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="50"
            android:textSize="20dp"
            android:textColor="#000000"/>

        <TextView
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/route_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/route_from"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="50"
            android:textSize="20dp"
            android:textColor="#000000"/>
        <TextView
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/route_to"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="50"
            android:textSize="20dp"
            android:textColor="#000000"/>





    </RelativeLayout>
    <Button
        android:layout_gravity="end"
        android:drawableEnd="@drawable/cart"
        android:id="@+id/cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/round_bg"
        android:padding="12dp"
        android:textAllCaps="false"
        android:textColor="#ff000000"
        android:textSize="22.0dip" />

</LinearLayout>