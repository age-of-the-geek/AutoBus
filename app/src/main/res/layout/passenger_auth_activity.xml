<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:textSize="21.0sp"
        android:textStyle="bold"
        android:id="@id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70.0dip"
        android:text="Please Enter Your Phone# to Verify"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:padding="15.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100.0dip"
        android:layout_below="@id/textView">
        <Spinner
            android:id="@+id/spinnerCountries"
            android:layout_width="115.0dip"
            android:layout_height="32.0dip" />
        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your number"
            android:maxLength="11"
            android:digits="\ 0123456789"
            android:layout_weight="2.0"
            android:textAlignment="center" />
    </LinearLayout>
    <Button
        android:textSize="22.0sp"
        android:textColor="#ff000000"
        android:id="@+id/continuebtn"
        android:background="@drawable/button_style_selector"
        android:layout_width="150.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="80.0dip"
        android:text="Continue"
        android:layout_below="@id/linearLayout"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false" />
</RelativeLayout>